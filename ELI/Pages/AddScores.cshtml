<script type="text/javascript">
    $('input[name$="EptScore"]').change(function () {
        var intid = $(this).attr("data-internalid");
        //alert(intid);
        var placement_item = $('input[name="Students[' + intid + '].Score.EptPlacement"]');
        //alert(placement_item.val());
        if (!placement_item.val()) {
            var placement_score = calculateEptPlacement($(this).val());
            placement_item.val(placement_score);
        }
    });

    $('input[name$="WriteScore"]').change(function () {
        var intid = $(this).attr("data-internalid");
        //alert(intid);
        var placement_item = $('input[name="Students[' + intid + '].Score.WritePlacement"]');

        //alert(placement_item.val());
        if (!placement_item.val()) {
            var eptscore_item = $('input[name="Students[' + intid + '].Score.EptScore"]');
            var placement_score = calculateEptPlacement(eptscore_item.val());
            placement_item.val(placement_score);
        }
    });

    $('input[name$="OralScore"]').change(function () {
        var intid = $(this).attr("data-internalid");
        //alert(intid);
        var placement_item = $('input[name="Students[' + intid + '].Score.OralPlacement"]');
        //alert(placement_item.val());
        if (!placement_item.val()) {
            var placement_score = calculateOralPlacement($(this).val());
            placement_item.val(placement_score);
        }
    });

    function calculateEptPlacement(score) {
        if (score) {
            if (score >= 0 && score <= 29) {
                return 1;
            }
            else if (score >= 30 && score <= 47) {
                return 2;
            }
            else if (score >= 48 && score <= 65) {
                return 3;
            }
            else if (score >= 66 && score <= 76) {
                return 4;
            }
            else if (score >= 77) {
                return 5;
            }
        }
        return null;
    }

    function calculateOralPlacement(score) {
        if (score) {
            return score.substring(0, 1);
        }
        return null;
    }
</script>